<h2>Edit Comment</h2>

<%= form_with(model: @comment, local: true) do |f| %>
  <%#= render 'layouts/errors', object: f.object %>

  <div class="field">
    <%= f.text_area :body, style: "width: 100%", maxlength: 1000 %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Comment' %>
  </div>
<% end %>

<%= link_to 'Back', comment_redirect_path(@commentable) %>