<div style="margin-bottom: 0rem;">
    <h5 class="mb-5 text-gray-800"><%= link_to sanitize("&larr; My playlists"), playlists_path, data: { turbo_frame: "_top" } %></h5>
    <h1 class="text-6xl font-semibold capitalize"> <%= @playlist.name %></h1>

    <div class="flex gap-3 items-center text-gray-600">
        
        <% if @playlist.account.avatar.attached? %>
            <%= link_to image_tag(@playlist.account.avatar, class: "w-8 h-8 rounded-full object-cover", alt: "#{@playlist.account.username}'s avatar"), profile_path(@playlist.account.username) %>
        <% else %>
            <%= link_to image_tag('others/default avatar', class: "w-8 h-8 rounded-full object-cover", alt: "#{@playlist.account.username}'s avatar"), profile_path(@playlist.account.username) %>
        <% end %>

        <h6 class="py-5"><%= link_to @playlist.account.name, profile_path(@playlist.account.username) %></h6>

        <span>•</span>

        <%= render_date(@playlist) %>

        <span>•</span>

        <%= pluralize(@playlist.episodes.count, 'episode') %>

        <span>•</span>

        <%= @playlist.visibility.capitalize %> Playlist

    </div>
</div>