        <%= image_tag(playlist.photo, class: "h-auto max-w-full rounded-lg") %>
    <% else %>
        <%= image_tag('podcasts/hands.png', class: "h-auto max-w-full rounded-lg") %>
    <% end %>
    <div class="my-2">
        <h1 class=""><%= (playlist.name).truncate(38) %></h1>
        <div class="text-gray-500 text-sm capitalize">
            <p><%= playlist.visibility %> <span> â€¢ </span> playlist</p>
            <p><%= time_ago_in_words(playlist.updated_at) %></p>
            <p class="font-semibold">View full playlist</p>
        </div>
    </div>
<% end %>