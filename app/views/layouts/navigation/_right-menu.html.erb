<% if account_signed_in? %>

    <%= render 'layouts/navigation/mega-menu' %>

    <%= link_to image_tag("icons/notification.png", class: "w-5 h-5 block mr-2"), '#' %>

    <%= link_to image_tag("icons/messenger.png", class: "w-5 h-5 block mr-2"), '#' %>

    <%= render 'layouts/navigation/user-menu' %>

<% else %>

    <%= link_to 'Sign In', new_account_session_path, class: "text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 py-2 md:px-5 md:py-2.5 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800", data: {action: "click->dialog#open", turbo_frame: :modal} %>

    <%= link_to 'Sign Up', new_account_registration_path, class: "rounded-full py-2 px-4 bg-blue-800 text-white hover:bg-blue-700", data: {action: "click->dialog#open", turbo_frame: :modal} %>
<% end %>
