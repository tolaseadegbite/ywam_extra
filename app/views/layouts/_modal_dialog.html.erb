<%= turbo_frame_tag :modal do %>
    <dialog data-controller="modal" data-action="click->modal#clickOutside"
            class="backdrop:bg-gray-500 backdrop:bg-opacity-75 z-10 rounded-lg border-gray-200 dark:bg-gray-800 dark:border-gray-700 w-full md:w-[50vw] mx-auto my-auto shadow-xl">
        <div class="relative">
            <button class="bg-white absolute top-5 right-2" data-action="modal#close">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <%= yield %>
    </dialog>
<% end %>