<%= turbo_frame_tag co_host_record do %>
    <li>
        <span class="inline-flex gap-2 items-center">
            <% if co_host_record.account.avatar.attached? %>
                <%= link_to image_tag(co_host_record.account.avatar, class: "w-8 h-8 rounded-full mx-auto"), profile_path(co_host_record.account.username) %>
            <% else %>
                <%= link_to image_tag('others/default avatar', class: "w-8 h-8 rounded-full mx-auto"), profile_path(co_host_record.account.username) %>
            <% end %>
            
            <%= link_to co_host_record.account.name, profile_path(co_host_record.account.username) %> - <%= co_host_record.status.capitalize %>
            <% if (co_host_record.accepted? || co_host_record.pending?) && current_account == @event.account %>
                <%= button_to remove_co_host_dashboard_event_path(@event, account_id: co_host_record.account.id), class: "inline-flex gap-1 items-center rounded text-sm px-1 py-1 bg-red-800 items-center text-white hover:bg-red-900", method: :delete, data: { turbo_confirm: 'Are you sure?' } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.3" stroke="currentColor" class="size-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                <% end %>
            <% end %>
        </span>
    </li>
<% end %>