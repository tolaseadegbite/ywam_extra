<%= turbo_stream.update 'show_header' do %>
    <%= render 'dashboard/episodes/components/show_header' %>
<% end %>

<%= turbo_stream.update 'cover_image' do %>
    <%= render 'dashboard/episodes/components/cover_image' %>
<% end %>

<%= turbo_stream.update 'description' do %>
    <%= render 'dashboard/episodes/components/description' %>
<% end %>

<%= turbo_stream.update 'audio' do %>
