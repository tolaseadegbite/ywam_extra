<%= turbo_stream.append "reviews" do %>
  <%= render @review, reviewable: @reviewable %>
  <%#= render 'reviews/review_restriction_text' %>
<% end %>

<%= turbo_stream.replace dom_id(@reviewable, :reviews_count) do %>
  <%= pluralize(@reviewable.reviews.count, 'Review') %>
<% end %>

<%= turbo_stream.update Review.new, '' %>
<%= turbo_stream.replace 'review_button' do %>
  <%= render 'reviews/review_restriction_text' %>
<% end %>

<%= render_turbo_stream_flash_messages %>
