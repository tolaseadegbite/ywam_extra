<!-- Remove the review that was just deleted -->
<%= turbo_stream.remove @review %>

<!-- update the review restriction text with the new review button -->
<%= turbo_stream.update 'review_restriction_text' do %>
  <%= render 'reviews/new_review_button', reviewable: @reviewable %>
<% end %>


<%= turbo_stream.update dom_id(@reviewable, :reviews_count) do %>
  <%= render 'reviews/reviews_count', reviewable: @reviewable %>
<% end %>

<%= turbo_stream.update 'reviews_count_rating' do %>
  <%= render "podcasts/components/reviews_count_rating", reviewable: @reviewable %>
<% end %>

<!-- Optional: Render any flash messages for feedback -->
<%= render_turbo_stream_flash_messages %>