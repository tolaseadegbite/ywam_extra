<%= turbo_stream.append 'episodes' do %>
    <%= render @episodes %>
<% end %>

<%= turbo_stream.replace :pagination do %>
    <% if @pagy.next.present? %>
        <%= turbo_frame_tag :pagination, loading: :lazy, src: podcast_episodes_path(@podcast, format: :turbo_stream, page: @pagy.next) %>
    <% end %>
<% end %>