<%= provide(:title, "Events you are going") %>

<%= render 'events/components/sidebar' %>

<%= render 'events/components/sidebar_menu' %>

<div class="py-8 mx-auto px-8 lg:px-8">
    <header class="mb-3">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold capitalize leading-tight">Going</h1>
        <p class="text-lg"><%= pluralize(@events.count, 'Event') %></p>
    </header>

    <%= content_tag(:"turbo-frame", id: "events", class: "grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3") do %>
        <%= render @events %>
    <% end %>
</div>