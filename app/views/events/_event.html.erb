<%#= turbo_frame_tag podcast do %>
    <%= link_to event, class: "hover:bg-gray-100 transition duration-300 ease-in-out block border relative rounded-b-lg", data: { turbo_frame: "_top" } do %>

        <% if event.image.attached? %>
            <%= image_tag(event.image, class: "w-full h-48 object-cover rounded-t-lg") %>
        <% else %>
            <%= image_tag('podcasts/hands.png', class: "w-full h-48 object-cover rounded-t-lg") %>
        <% end %>

        <% if event.free? %>
            <p class="absolute bg-white text-xs px-4 py-1 rounded-b drop-shadow-md right-5 top-0">Free</p>
        <% end %>

        <div class="my-4 p-2">
            <p class="text-sm text-blue-700 font-semibold mb-2">
                <%= event.start_date.strftime("%a, %b %d") %>
            </p>
            <h1 class=""><%= (event.name).truncate(38) %></h1>
            <% if event.location.present? %>
                <p class="text-sm mt-2"><%= event.location %></p>
            <% else %>
                <p class="text-sm mt-2">Online, <%= event.streaming_platform %></p>
            <% end %>

            <div class="flex items-center gap-1">
                <p class="text-xs"><%= event.rsvps.interested.count%> interested</p>
                <span>â€¢</span>
                <p class="text-xs"><%= event.rsvps.going.count %> going</p>
            </div>
        </div>
    <% end %>
<%# end %>