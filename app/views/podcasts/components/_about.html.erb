<div class="mx-auto">
    <% if @podcast.cover_art.attached? %>
        <%= image_tag(@podcast.cover_art, class: "md:w-[300px] h-auto sm:mx-auto md:mx-0 rounded-lg drop-shadow-md") %>
    <% else %>
        <%= image_tag('podcasts/hands.png', class: "w-[200px] md:w-[300px] h-auto sm:mx-auto md:mx-0 rounded-lg drop-shadow-md") %>
    <% end %>
</div>

<%= link_to edit_podcast_path(@podcast), class: "absolute top-4 left-4 w-8 h-8 rounded-full bg-white/50 hover:bg-white flex items-center justify-center transition duration-300 ease-in-out", data: {action: "click->dialog#open", turbo_frame: :modal} do %>
